{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "bn.js": "^5.2.1",
    "dotenv": "^16.3.1"
  },
  "scripts": {
    "start": "npx hardhat node",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "initialize:sepolia": "npx hardhat run scripts/initialize.js --network sepolia",
    "flat:factory": "npx hardhat flatten contracts/PoolFactory.sol > PoolFactory.sol",
    "flat:router": "npx hardhat flatten contracts/PoolRouter.sol > PoolRouter.sol"
  }
}
